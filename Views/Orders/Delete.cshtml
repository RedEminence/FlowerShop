@model FlowerShop.Models.Order

@{
    ViewData["Title"] = "Удаление заказа";
}

<h1>Удаление заказа</h1>

<h3>Вы уверены, что хотите удалить заказ?</h3>
<div>
    <hr />
        <dl class="row">
        <dt class = "col-sm-2">
            Почта пользователя
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class = "col-sm-2">
            Букет
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bouquet.Name)
        </dd>
        <dt class = "col-sm-2">
            Адрес доставки
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            Дата создания
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class = "col-sm-2">
            Дата доставки
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DeliverAt)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться с списку</a>
    </form>
</div>
